<h1>Pedido finalizado</h1>
<div class="row">
  <div class="col">
    <h3>Datos del comercio</h3>
    <ul>
      <li><%= session[:place]['name'] %></li>
      <li>Tel√©fono: <%= session[:place]['phone'] %></li>
    </ul>
  </div>
</div>
<table class="table table-striped">
  <%= render partial: 'summary'%>
  <tfoot>
  <tr>
    <td><strong>Total de empanadas</strong></td>
    <td><strong><%= session[:order]['sum_of_all_varieties'] %></strong></td>
    <% session[:order]['sum_of_varieties_by_person'].values.each do |quantity| %>
      <td><%= quantity %></td>
    <% end %>
  </tr>
  <tr>
    <td><strong>Pagos por persona</strong></td>
    <td></td>
    <% session[:order]['price_by_person'].values.each do |price| %>
      <td>$ <%= price %></td>
    <% end %>
  </tr>
  </tfoot>
</table>
