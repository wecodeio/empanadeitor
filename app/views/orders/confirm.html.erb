<h1>Finalizar pedido</h1>
<div class="row">
  <div class="col">
    <h3>Datos del comercio</h3>
    <ul>
      <li><%= @order.place_name %></li>
      <% if @order.place_phone %>
        <li>Tel√©fono: <%= @order.place_phone %></li>
      <% end %>
    </ul>
  </div>
</div>
<table class="table table-striped">
  <%= render partial: 'summary' %>
  <tfoot>
  <tr>
    <td><strong>Total de empanadas</strong></td>
    <td><strong><%= @order.total_units %></strong></td>
    <% @order.list_of_participants.each do |person| %>
      <td><%= @order.total_units_per_person[person] %></td>
    <% end %>
  </tr>
  </tfoot>
</table>
<%= form_for :order_data, url: finish_order_path do |f| %>
  <div class="form-group">
    <%= f.label 'Precio' %>
    <%= f.text_field 'price', required: true, class: 'form-control' %>
  </div>
  <%= f.button 'Finalizar', class: 'btn btn-primary' %>
  <%= link_to 'Atras', edit_order_path(@order.id), class: 'btn btn-primary' %>
<% end %>
