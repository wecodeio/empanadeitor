<h2></h2>
<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">Variedad</th>
    <th scope="col">Total por variedad</th>
    <% keys = @total_order_by_person.keys %>
    <% @total_order_by_person[keys[0]].keys.each do |name| %>
      <th scope="col"><%= name %></th>
    <% end %>

  </tr>
  </thead>
  <tbody>
  <% sum = 0 %>
  <% sum_by_person = Hash.new(0) %>
  <% @total_order.each do |variety_order| %>
    <tr>
      <td><%= variety_order['variety'].name %></td>
      <td><%= variety_order['quantity'] %></td>
      <% sum += variety_order['quantity'] %>
      <% @total_order_by_person[variety_order['variety'].name].each do |name, quantity| %>
        <td><%= quantity %></td>
        <% sum_by_person[name] += quantity %>
      <% end %>

    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td><strong>Total de empanadas</strong></td>
    <td><strong><%= sum %></strong></td>
    <% sum_by_person.values.each do |quantity| %>
      <td><%= quantity %></td>
    <% end %>
  </tr>
  </tfoot>
</table>