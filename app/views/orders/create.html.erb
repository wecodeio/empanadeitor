<h1>Finalizar pedido</h1>
<div class="row">
  <div class="col">
    <h3>Datos del comercio</h3>
    <ul>
      <li><%= session[:place]['name'] %></li>
      <li>Tel√©fono: <%= session[:place]['phone'] %></li>
    </ul>
  </div>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">Variedad</th>
    <th scope="col">Total por variedad</th>
    <% keys = @total_order_by_person.keys %>
    <% @total_order_by_person[keys[0]].keys.each do |name| %>
      <th scope="col"><%= name %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @total_order.each do |variety_order| %>
    <tr>
      <td><%= variety_order['variety'].name %></td>
      <td><%= variety_order['quantity'] %></td>
      <% @total_order_by_person[variety_order['variety'].name].each do |name, quantity| %>
        <td><%= quantity %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <td><strong>Total de empanadas</strong></td>
    <td><strong><%= @sum_of_all_varieties %></strong></td>
    <% @sum_of_varieties_by_person.values.each do |quantity| %>
      <td><%= quantity %></td>
    <% end %>
  </tr>
  </tfoot>
</table>
<%= form_for :price, url: finish_order_path do |f| %>
  <div class="form-group">
    <%= f.label 'Precio' %>
    <%= f.text_field 'price', class: 'form-control' %>
  </div>
  <button type="submit" class="btn btn-primary">Finalizar</button>
<% end %>