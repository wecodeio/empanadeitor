<h1>Lugar</h1>
<ul class="list-group">
  <li class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Nombre:</h5>
    </div>
    <p class="mb-1"><%= @place.name %></p>
  </li>
  <li class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Telefono:</h5>
    </div>
    <p class="mb-1"><%= @place.phone %></p>
  </li>
  <li class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Direccion:</h5>
    </div>
    <p class="mb-1"><%= @place.address %></p>
  </li>
  <li class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Variedades:</h5>
    </div>
    <p><%= link_to 'Añadir variedad', new_admin_place_variety_path(@place.id), class: 'btn btn-primary btn-sm' %></p>
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Acciones</th>
      </tr>
      </thead>
      <tbody>
      <% @place.varieties.each do |variety| %>
        <tr>
          <td><%= variety.name %></td>
          <td>
            <%= link_to 'Editar', edit_admin_place_variety_path(@place.id, variety.id), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Eliminar', admin_place_variety_path(@place.id, variety.id), method: :delete,
                        data: {confirm: '¿Estas seguro?'}, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </li>
</ul>
