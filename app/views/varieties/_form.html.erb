<% if @variety.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(@variety.errors.count, "error") %></h2>
      <ul>
        <% @variety.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :name, 'Nombre' %>
  <%= f.text_field :name, required: true, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :phone, 'Precio' %>
  <%= f.text_field :price, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :address, 'Lugar' %>
  <%= f.select :place_id, options_for_select(@places.map{ |place|
    [place.name, place.id] }),{}, required: true, class: 'form-control' %>
</div>
